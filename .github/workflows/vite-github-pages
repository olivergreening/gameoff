name: CI

on:
	push:
		branches: [ main ]
	pull_request:
		branches: [ main ]

	workflow_dispatch:

jobs:
	build:
		runs-on: ubuntu-latest

			- uses: actions/checkout@v2

			- name: npm install
			run: npm install

			- name: npm run build
			run: npm run build

			- name: Deploy ðŸš€
			uses: JamesIves/github-pages-deploy-action@4.1.1
			with:
				branch: gh-pages # The branch the action should deploy to.
				folder: dist # The folder the action should deploy.
